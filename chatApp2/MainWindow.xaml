<Window x:Class="chatApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chatApp2"
        mc:Ignorable="d"
        Height="650" Width="1200"
        Background ="#36393F"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25">

            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200">

            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Background="#252525" Margin="0,0,-999,0">
            <Grid Margin="0,0,-999,0" HorizontalAlignment="Left" Width="1200">
                <Label Content="Chat App" 
                       Foreground="Gray"
                       FontWeight="SemiBold">
                </Label>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="send" Height="24" Width="40">

                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
